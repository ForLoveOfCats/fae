	float = float - 4.5
	println(f"{float}") // 4.25

	float = float * 88
	println(f"{float}") // 374

	float = float / 8
	println(f"{float}") // 46.75

	float = 7.5
	println(f"{float}") // 7.5

	float += 1.25
	println(f"{float}") // 8.75

	float -= 4.5
	println(f"{float}") // 4.25

	float *= 88
	println(f"{float}") // 374

	float /= 8
	println(f"{float}") // 46.75
}

