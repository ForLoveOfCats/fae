struct Structure {
	field: i32
}

method mut Structure
fn increment(by: i32) {
	println("Incrementing")
	self.field += by
}

method Structure
fn print_details() {
	println(f"Value of field: {self.field}")
}

fn main() {
	mut a = Structure { field: 2 }
	let ptr = a.&mut

	let value = ptr.field
	println(f"{value}")

	ptr.print_details()
	ptr.increment(2)
	ptr.print_details()

	let slice = []f64 { 1 , 3.8, 5 }
	let ptr = slice.&
	println(f"Slice length: {ptr.length}")
}
