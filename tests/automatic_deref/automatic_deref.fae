import fae::stdout::print_i32, print_isize, print_string, print_newline

struct Structure {
	field: i32
}

method mut Structure
fn increment(by: i32) {
	print_string("Incrementing\n")
	self.field += by
}

method Structure
fn print_details() {
	print_string("Value of field: ")
	print_i32(self.field)
	print_newline()
}

fn main() {
	mut a = Structure { field: 2 }
	let ptr = a.&mut

	let value = ptr.field
	print_i32(value)
	print_newline()

	ptr.print_details()
	ptr.increment(2)
	ptr.print_details()

	let slice = [1.(f64), 3.8, 5]
	let ptr = slice.&
	print_string("Slice length: ")
	print_isize(ptr.length)
	print_newline()
}
