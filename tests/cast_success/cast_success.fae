import fae::stdout::print_u64, print_newline

#c_include_system "stdlib.h"

extern "calloc"
fn c_raw_calloc(count: usize, size: usize): &mut u8

extern "free"
fn c_raw_free(ptr: &mut u8)

generic T
fn allocate(): &mut T {
	let size = size_of[T]().(usize)
	return c_raw_calloc(1, size).(&mut T)
}

generic T
fn deallocate(ptr: &mut T) {
	c_raw_free(ptr.(&mut u8))
}

fn takes_ptr(ptr: &u64) {
	print_u64(ptr.*)
	print_newline()
}

fn main() {
	let ptr = allocate[u64]()
	ptr.* = 42
	takes_ptr(ptr.(&u64))
	deallocate[u64](ptr)
}
