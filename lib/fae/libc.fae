const StdInDescriptor: i32 = 0
const StdOutDescriptor: i32 = 1
const StdErrDescriptor: i32 = 2

when PlatformLinux {
	extern "stdin"
	static StdInFile: *FileStream

	extern "stdout"
	static StdOutFile: *FileStream

	extern "stderr"
	static StdErrFile: *FileStream

	const O_RDONLY = 0
	const O_RDWR = 2
	const O_CREAT = 64
	const O_APPEND = 1024
	const O_TRUNC = 512
} else when PlatformDarwin {
	extern "__stdinp"
	static StdInFile: *FileStream

	extern "__stdoutp"
	static StdOutFile: *FileStream

	extern "__stderrp"
	static StdErrFile: *FileStream

	const O_RDONLY = 0
	const O_RDWR = 2
	const O_CREAT = 512
	const O_APPEND = 8
	const O_TRUNC = 1024
} else when PlatformWindows {
	// Initalized on startup by `fae.runtime.perform_setup`
	static StdInFile: *FileStream
	static StdOutFile: *FileStream
	static StdErrFile: *FileStream

	const O_RDONLY = 0
	const O_RDWR = 2
	const O_CREAT = 256
	const O_APPEND = 8
	const O_TRUNC = 512
}

