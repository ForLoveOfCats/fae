fn main() {
	let slice = []{ "Hello", "Fae", "world" }

	breaks(slice, false)
	println("")
	breaks(slice, true)

	println("")
	println("")
	println("")

	continues(slice, false)
	println("")
	continues(slice, true)
}

fn breaks(slice: []str, early_break: bool) {
	println("A")
	defer println("1")

	for index in 0..3 {
		defer println("2")

		if early_break => break

		println(f"iteration {index}")
		defer println("3")
	}

	println("B")
	defer println("4")
	println("C")
}

fn continues(slice: []str, early_continue: bool) {
	println("A")
	defer println("1")

	for index in 0..3 {
		defer println("2")

		if early_continue and index == 1 => break

		println(f"iteration {index}")
		defer println("3")
	}

	println("B")
	defer println("4")
	println("C")
}
