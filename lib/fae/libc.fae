extern "printf"
fn printf(pointer=: *u8, ...)

extern "puts"
fn puts(pointer=: *u8)

extern "rand"
fn rand(): i32

when PlatformWindows {
	extern "_read"
	fn _read(file_descriptor=: i32, buffer: *mut u8, size: u32): i32

	fn read(file_descriptor=: i32, buffer: *mut u8, size: usize): isize {
		assert(size <= 4294967295) // Make sure the cast is sound
		return _read(file_descriptor, buffer, size: size.(u32)).(isize)
	}
} else {
	extern "read"
	fn read(file_descriptor=: i32, buffer: *mut u8, size: usize): isize
}

