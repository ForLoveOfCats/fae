fn main() {
	signed()
	unsigned()
	float()
	double()
}

fn signed() {
	println("Signed binary operations")
	mut signed: i64 = 5
	println(f"{signed}") // 5

	signed = signed + 1
	println(f"{signed}") // 6

	signed += 2
	println(f"{signed}") // 8

	signed = signed - 4
	println(f"{signed}") // 4

	signed -= 10
	println(f"{signed}") // -6

	signed = signed * 18
	println(f"{signed}") // -108

	signed *= 4
	println(f"{signed}") // -432

	signed = signed / 3
	println(f"{signed}") // -144

	signed /= 4
	println(f"{signed}") // -36

	signed = signed % 20
	println(f"{signed}") // 4

	signed = -16
	println(f"{signed}") // -16

	signed %= 12
	println(f"{signed}") // 8

	signed = signed << 5
	println(f"{signed}") // 256

	signed <<= 2
	println(f"{signed}") // 1024

	signed = -signed
	println(f"{signed}") // -1024

	signed = signed >> 3
	println(f"{signed}") // -128

	signed >>= 2
	println(f"{signed}") // -32

	signed = signed & 255
	println(f"{signed}") // 224

	signed &= 112
	println(f"{signed}") // 96

	signed = signed | 7
	println(f"{signed}") // 103

	signed |= 152
	println(f"{signed}") // 255

	signed = signed ^ 1023
	println(f"{signed}") // 768

	signed ^= 769
	println(f"{signed}") // 1
}

